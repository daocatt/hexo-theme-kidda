avatar-size = 4rem

.header {
  padding: 2 * gutter-size 0
  display: flex
  justify-content: space-between
  align-items: flex-start

  @media mq-mobile{
    flex-direction: column
  }
}

.header-left {
  display: flex
  flex: 1
}
.header-right {
  display: flex
  flex: 1
  justify-content: flex-end
  align-self: center

  &ul{
    display: inline-block
  }

  @media mq-mobile{
    padding: 1.2rem 0
  }
}

.avatar {
  width: avatar-size
  height: avatar-size
  background-color: #ffffff
  padding: 5px
  display: flex
  align-items: center
  justify-content: center
  border-radius: 50%
  overflow: hidden
  a {
    width: 100%
    height: 100%
    display: block
  }
  img {
    width: 100%
    height: 100%
    border-radius: 50%
  }
}

.author {
  margin-left: gutter-size
  display: flex
  flex-direction: column
  justify-content: space-between
  padding: .3rem 0
}

.author-name {
  font-size: 2 * gutter-size
  font-weight:bold;
}

.about-me {
  color: color-grey
}

.navigation {
  clearfix()

  li {
    float left
    margin-left 2rem

    a {
      color color-grey

      &:after {
        display none
      }

      &:hover {
        color color-link
      }
    }
  }
}
